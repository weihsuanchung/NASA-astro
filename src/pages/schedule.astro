---
import Base from '../layouts/Base.astro';
import { SCHEDULE } from '../data/schedule';
import TimelineChart from '../components/TimelineChart.astro';

const items = SCHEDULE.slice().sort((a,b)=> new Date(a.date).getTime()-new Date(b.date).getTime());
---
<Base title="重要時程｜NASA Space Apps">
  <h1 class="text-3xl font-bold text-white text-center">2025 重要時程</h1>

  <div class="mt-8 grid grid-cols-[repeat(auto-fill,minmax(320px,1fr))] gap-4" id="cards">
    {items.map(ev => (
      <div class="card">
        <div class="flex items-start justify-between gap-3">
          <div>
            <div class="text-sm text-slate-400">{ev.type}</div>
            <h3 class="text-lg font-bold text-white">{ev.titleZh}</h3>
            <p class="text-sm text-slate-400 italic mt-1">{ev.titleEn}</p>
            {ev.noteZh && <p class="text-sm text-slate-300 mt-2">{ev.noteZh}</p>}
            {ev.noteEn && <p class="text-sm text-slate-300">{ev.noteEn}</p>}
            {ev.links && ev.links.length > 0 && (
              <ul class="list-disc ml-5 mt-2 text-slate-300 space-y-1">
                {ev.links.map(l => <li><a class="text-cyan-300 underline" href={l.url} target="_blank">{l.label}</a></li>)}
              </ul>
            )}
          </div>
          <div class="text-right">
            <div class="text-xl text-amber-300 font-extrabold">{new Date(ev.date).toLocaleDateString('zh-TW')}</div>
          </div>
        </div>
      </div>
    ))}
  </div>
</Base>
